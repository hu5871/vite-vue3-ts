{
  "compilerOptions": {
    "target": "es2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny":false,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@http/*": ["./src/http/*"],
      "@store/*": ["./src/store/*"],
      "@router/*": ["./src/router/*"],
      "@types/*": ["./src/types/*"],
      "@cmp/*":["./src/components/*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
